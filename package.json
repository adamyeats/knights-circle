  "description": "Seed repo for Node.js projects",
  "main": "dist/index.js",
  "author": "Adam Yeats <ay@xadamy.xyz>",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
