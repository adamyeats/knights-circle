    "test:watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^18.14.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-jest": "^27.1.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,js}": "prettier --write"
  },
  "volta": {
    "node": "18.14.0"
  }
